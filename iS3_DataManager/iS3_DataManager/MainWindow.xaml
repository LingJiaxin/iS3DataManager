<Window x:Class="iS3_DataManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iS3_DataManager"
        mc:Ignorable="d"
        Title="iS3 Data Manager" Height="400" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="image/background.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="{x:Type ListBoxItem}" x:Key="ListBoxItemStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="border" CornerRadius="8" Margin="2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                            <GradientStop Color="#FF6B6B6B" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File" >
                <MenuItem Header="import" Click="Open_click"></MenuItem>
                <MenuItem Header="Save" Click="SaveData_Click"></MenuItem>
                <MenuItem Header="Delete"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit"></MenuItem>
            <MenuItem Header="View"></MenuItem>
            <MenuItem Header="About"></MenuItem>
        </Menu>
        <ListBox x:Name="ChoiceLB" HorizontalAlignment="Left" Grid.Row="1" ItemContainerStyle="{StaticResource ResourceKey=ListBoxItemStyle}" Background="#FF6EADD4" SelectionChanged="SelectionChanged">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBoxItem Content="Data Template"/>
            <ListBoxItem Content="Data Entry"/>
        </ListBox>
        <Grid x:Name="DataTemplateGrid" Grid.Row="2" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0">
                <TextBlock Text="Domain:" Margin="20,0,40,0"/>
                <TextBlock Text="Object:" Margin="40,0,40,0"/>
                <TextBlock Text="Properties:" Margin="40,0,40,0"/>
            </StackPanel>            
            <StackPanel Orientation="Horizontal" Grid.Row="1" >
                <ListBox 
                    x:Name="DomainNameLB" Width="80" Margin="5,0,5,0" DisplayMemberPath="LangStr" 
                    MouseLeftButtonUp="DomainName_Click"
                    SelectionMode="Multiple"
                    >
                </ListBox>
                <ListBox 
                    x:Name="ObjectNameLB" 
                    Width="120" 
                    Margin="25,0,5,0" 
                    DisplayMemberPath="LangStr" 
                    SelectionChanged="ObjectNameLB_SelectionChanged"
                    SelectionMode="Extended">
                </ListBox>
                <ListBox x:Name="DescriptionLB" Width="300" Margin="25,0,5,0"  DisplayMemberPath="LangStr">
                </ListBox>              
            </StackPanel>
            <Button Margin="0,5,5,5" Grid.Row="2" Width="150" Height="20" Content="Export Data Template" Click="ExportDataTemplate_Click" HorizontalAlignment="Right"/>
        </Grid>
        <Grid x:Name="DataEntryGrid" Grid.Row="2" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Width="100" Height="20" Content="Import Data" Click="ImportData_Click" HorizontalAlignment="Left"/>
            <Button Grid.Row="0" Width="100" Height="20" Content="Save Data" Click="SaveData_Click" HorizontalAlignment="Right"/>
            <DataGrid x:Name="DataSetDG" Grid.Row="1" Margin="5,5,5,5" 
                      AutoGenerateColumns="True"
                      AlternationCount="2"
                      CanUserAddRows="False"
                      IsReadOnly="False"
                      HorizontalGridLinesBrush="#FF6EADD4"
                      VerticalGridLinesBrush="#FF6EADD4"
                      EnableRowVirtualization="True"
                      
                      >
                <DataGrid.Columns x:Uid="column1" >
                    
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Window>

